{
    "name":  "Hound",
    "version":  "0.1.0",
    "private":  true,
    "type":  "module",
    "description":  "Hound Phase 1 desktop app",
    "main":  "electron/main.cjs",
    "scripts":  {
                    "dev:web":  "vite --config ui/vite.config.js",
        "dev:app":  "node -e \"console.error('dev:app disabled in web-first mode'); process.exit(1)\"",
        "start":  "npm run dev:web",
                    "build":  "vite build --config ui/vite.config.js",
                    "preview":  "vite preview --config ui/vite.config.js",
        "electron":  "node -e \"console.error('electron runtime disabled in web-first mode'); process.exit(1)\"",
                    "pack":  "node -e \"console.error('pack disabled in web-first mode'); process.exit(1)\"",
                    "dist":  "node -e \"console.error('dist disabled in web-first mode'); process.exit(1)\"",
                    "den":  "echo admin panel removed"
                },
    "dependencies":  {
                         "better-sqlite3": "^9.4.5",
                         "fft.js": "^4.0.4",
                         "react":  "^18.2.0",
                         "react-dom":  "^18.2.0"
                     },
    "devDependencies":  {
                            "@vitejs/plugin-react":  "^4.2.0",
                            "concurrently":  "^8.2.2",
                            "electron":  "^27.1.2",
                            "vite":  "^5.0.3",
                            "electron-builder":  "^24.13.3"
                        },
    "build":  {
                  "appId":  "com.Hound.app",
                  "productName":  "Hound",
                  "files":  [
                                "dist/**",
                                "electron/**",
                                "package.json"
                            ],
                  "directories":  {
                                      "output":  "release"
                                  },
                  "extraResources":  [
                                         {
                                             "from":  "electron/ffmpeg",
                                             "to":  "ffmpeg"
                                         }
                                     ],
                  "win":  {
                              "target":  "nsis",
                              "signAndEditExecutable":  false
                          },
                  "asar":  true,
                  "nsis":  {
                               "oneClick":  false,
                               "allowToChangeInstallationDirectory":  true,
                               "createDesktopShortcut":  true,
                               "createStartMenuShortcut":  true,
                               "shortcutName":  "Hound"
                           }
              }
}

